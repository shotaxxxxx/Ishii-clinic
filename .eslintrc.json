{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    // "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "globals": {
    "jQuery": "readonly", //  writable
    "$": "readonly"
  },
  "rules": {
    "prettier/prettier": "error",
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ]
  }
}
