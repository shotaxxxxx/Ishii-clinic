{
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-concentric-order", "stylelint-config-prettier"],
  "plugins": ["stylelint-prettier", "stylelint-order", "stylelint-scss"],
  "rules": {
    "prettier/prettier": true,
    "number-leading-zero": "never",
    "length-zero-no-unit": true,
    "unit-case": "lower",
    "unit-no-unknown": true
  },
  "ignoreFiles": [
    "./src/assets/sass/lib/*.scss",
    "./src/assets/sass/foundation/_oreset.scss",
    "./src/assets/sass/object/component/_grid.scss"
  ]
}
