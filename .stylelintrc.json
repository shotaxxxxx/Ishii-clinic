{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-prettier/recommended",
    "stylelint-config-property-sort-order-smacss"
  ],
  "plugins": [
    "stylelint-prettier",
    "stylelint-scss",
    "stylelint-order"
  ],
  "ignoreFiles": [
    "**/node_modules/**"
  ],
  "rules": {
    "prettier/prettier": true,
    "number-leading-zero": "never",
    "length-zero-no-unit": true,
    "unit-case": "lower",
    "unit-no-unknown": true
  }
}
