{
  "name": "project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "creanup": "rimraf ./public",
    "build:ejs": "ejs-cli -b src/ejs/ \"/**/[^_]**.ejs\" -o public/ && prettier --write \"public/**/*.html\"",
    "build:sass": "node-sass --importer node_modules/node-sass-globbing/index.js src/assets/sass/ -o public/assets/css/ --output-style expanded --source-map public/assets/css/",
    "build:postcss": "postcss ./public/assets/css/*.css -d ./public/assets/css/",
    "build:css": "run-s build:sass build:postcss",
    "watch:copy": "cross-env NODE_ENV=development node copy.config.js",
    "watch:ejs": "chokidar \"src/ejs/\" -c \"npm run build:ejs\" --initial",
    "watch:img": "chokidar \"src/assets/img/**/*\" -c \"node imagemin.js\" --initial",
    "watch:server": "browser-sync start --config bs.config.js",
    "watch:sass": "chokidar \"src/assets/sass/**/*.scss\" -c \"npm run build:css\" --initial",
    "watch:js": "webpack -w --config ./webpack.dev.js",
    "dev": "npm run creanup && run-p watch:*",
    "format:sass": "stylelint \"src/assets/sass/**/*.scss\" --fix",
    "release:sass": "node-sass --importer node_modules/node-sass-globbing/index.js src/assets/sass/ -o public/assets/css/ --output-style expanded",
    "release:postcss": "postcss ./public/assets/css/*.css -d ./public/assets/css/ --env production",
    "prod:copy": "cross-env NODE_ENV=production node copy.config.js",
    "prod:ejs": "npm run build:ejs",
    "prod:css": "run-s format:sass release:sass release:postcss",
    "prod:js": "webpack --config ./webpack.prod.js",
    "prod:img": "node imagemin.js",
    "prod": "npm run creanup && run-p prod:*"
  },
  "private": true,
  "keywords": [],
  "author": "Shibata Hironori",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "core-js": "^3.6.4",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "css-declaration-sorter": "^5.1.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "ejs-cli": "^2.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.2",
    "imagemin-cli": "^5.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.1.0",
    "jquery": "^3.4.1",
    "node-sass": "^4.13.1",
    "node-sass-globbing": "0.0.23",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.3",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-concentric-order": "^4.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.14.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  }
}
